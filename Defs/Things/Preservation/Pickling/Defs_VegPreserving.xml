            <li>FRMT_OliveOil</li>
            <li>FRMT_SesameOil</li>
            <li>FRMT_SunflowerOil</li>
          </disallowedThingDefs>
        </filter>
        <count>1.25</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>FRMT_Vinegar</li>
          </thingDefs>
        </filter>
        <count>12</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>PlantFoodRaw</li>
      </categories>
      <thingDefs>
        <li>FRMT_Vinegar</li>
      </thingDefs>
      <disallowedThingDefs>
        <li>RawFungus</li>
        <li>RawAgave</li>
        <li>RawBerries</li>
        <li>FRMT_VegPickled</li>
        <li>FRMT_FruitPickled</li>
